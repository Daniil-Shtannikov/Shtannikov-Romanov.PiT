<Window x:Class="Shtannikov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shtannikov"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="310">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" Height="80" Margin="10" Source="yr13.png"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            
            <StackPanel>
                <Label Content="x" Margin="10"/>
                <Label Content="m" Margin="10"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBox Text="TextBox" Width="120" Margin="10"/>
                <TextBox Text="TextBox" Width="120" Margin="10"/>
            </StackPanel>
            
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
                <RadioButton Content="x3" Margin="10"/>
                <RadioButton Content="x3" Margin="10"/>
                <RadioButton Content="x3" Margin="10"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Button Content="Вычислить" Margin="10" Width="100"/>
                <Button Content="Очистить" Margin="10" Width="100"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
            <Label Content="Ответ" Margin="10"/>
            <TextBox Text="0" HorizontalAlignment="Right" Width="100" Margin="10"/>
        </StackPanel>

    </Grid>
</Window>
